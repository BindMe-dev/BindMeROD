FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Wait for database and push schema
COPY wait-for-db.sh ./
RUN chmod +x wait-for-db.sh

# Expose port
EXPOSE 3000

# Start with database setup
CMD ["sh", "-c", "./wait-for-db.sh && npm run db:push && npm run dev"]
